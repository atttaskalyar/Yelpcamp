<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1>Add a new Comment to <%= campground.name %> </h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campsites/<%= campground._id %>/comments" method="POST">

                <div class="form-group">
                    <input class='form-control' type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <input class='form-control' type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
                
            </form>
            <a href="/campsites">Go back</a>
        </div>



    </div>
    <%- include("../partials/footer") %>